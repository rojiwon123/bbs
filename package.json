{
    "name": "@rojiwon123/bbs",
    "version": "0.0.4",
    "description": "Bulletin Board System RESTFul API Server",
    "main": "build/main",
    "scripts": {
        "check": "ts-patch check",
        "postinstall": "husky install",
        "init": "npm ci && npm run db:update && npm run build:nestia",
        "---------------------------------------------": "",
        "eslint": "eslint src",
        "eslint:fix": "eslint src --fix",
        "prettier": "prettier . -c",
        "prettier:fix": "prettier . -w",
        "----------------------------------------------": "",
        "sdk": "rimraf ./sdk && NODE_ENV=test nestia sdk",
        "build": "rimraf ./build && tsc -p ./tsconfig.build.json",
        "build:prisma": "rimraf ./db && npx @rojiwon123/prisma-schema-generator -c ./prisma && prisma generate",
        "build:swagger": "rimraf ./packages/api/swagger/swagger.json && NODE_ENV=test nestia swagger",
        "build:sdk": "npm run sdk && rimraf ./packages/sdk/lib && tsc -p ./tsconfig.sdk.json && rimraf ./sdk",
        "build:nestia": "npm run build:sdk && npm run build:swagger",
        "build:test": "rimraf ./tbuild && tsc -p ./tsconfig.test.json",
        "-----------------------------------------------": "",
        "start": "npm run build && NODE_ENV=development node build/main",
        "test": "npm run build:test && NODE_ENV=test node tbuild/test",
        "swagger": "npm run build:swagger && node ./packages/api/swagger/index.cjs",
        "-------------------------------------------------": "",
        "db:sync": "npm run build:prisma && prisma migrate dev --name init",
        "db:init": "prisma migrate reset --force",
        "db:deploy": "prisma migrate deploy",
        "prepare": "ts-patch install && typia patch"
    },
    "author": "rojiwon123",
    "license": "UNLICENSED",
    "repository": {
        "type": "git",
        "url": "https://github.com/rojiwon123/bbs.git"
    },
    "keywords": [
        "nestjs",
        "nestia",
        "bbs"
    ],
    "dependencies": {
        "@fxts/core": "^0.23.0",
        "@nestia/core": "^2.4.1",
        "@nestia/fetcher": "^2.4.1",
        "@nestjs/common": "^10.2.10",
        "@nestjs/core": "^10.2.10",
        "@nestjs/platform-express": "^10.2.10",
        "cookie-parser": "^1.4.6",
        "dotenv": "^16.3.1",
        "helmet": "^7.1.0",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.1",
        "typia": "^5.3.3",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@nestia/e2e": "^0.4.0",
        "@nestia/sdk": "^2.4.1",
        "@prisma/client": "^5.6.0",
        "@project/api": "file:packages/api",
        "@rojiwon123/prisma-schema-generator": "^0.0.7",
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/cookie-parser": "^1.4.6",
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.3",
        "@typescript-eslint/eslint-plugin": "^6.13.2",
        "@typescript-eslint/parser": "^6.13.2",
        "eslint-plugin-deprecation": "^2.0.0",
        "husky": "^8.0.3",
        "nestia": "^5.1.2",
        "prettier": "^3.1.0",
        "prisma": "^5.6.0",
        "prisma-markdown": "^1.0.7",
        "rimraf": "^5.0.5",
        "source-map-support": "^0.5.21",
        "ts-node": "^10.9.1",
        "ts-patch": "^3.1.0",
        "typescript": "^5.3.2",
        "typescript-transform-paths": "^3.4.6"
    },
    "prisma": {
        "schema": "prisma/schema.prisma"
    }
}
